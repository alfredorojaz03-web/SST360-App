<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvBienvenida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="Bienvenido Alfredo Alfonso a:"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Logo SST360"
            android:src="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/tvLogoTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SST360"
            android:textColor="#003366"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tu aliado integral en seguridad laboral"
            android:textColor="#555555"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvInstruccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="Seleccione la opción correspondiente:"
        android:textColor="#222222"
        android:textSize="16sp"
        android:textStyle="italic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnUsuariosRoles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="#1565C0"
                android:text="Usuarios / Roles"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnInspecciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="#1565C0"
                android:text="Inspecciones SST"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnReportes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="#1565C0"
                android:text="Reportes de Accidentes"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnCapacitaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="#1565C0"
                android:text="Capacitaciones"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnDocumentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="#1565C0"
                android:text="Documentos Normativos"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnSalir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="#B71C1C"
                android:text="Salir"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="© 2025 SST360 - Seguridad y Salud en el Trabajo"
        android:textColor="#777777"
        android:textSize="12sp" />

</LinearLayout>